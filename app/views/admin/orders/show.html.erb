<div class="container">
	<div class="row">
		<div class="col-xs-offset-2 col-xs-8">
			<h3><span style="background-color:gainsboro">　注文履歴詳細　</span></h3><br><br>
		</div>
	</div>

	<div class="row">
		<table>
			<tr>
				<th>購入者</th>
					<th><%= @order.customer.last_name %>　<%= @order.customer.first_name %></th>
			</tr>
			<tr>
				<th>配送先</th>
					<th><%= @order.ordered_postal_code %><%= @order.ordered_address %><br>
						<%= @order.address_name %>
					</th>
			</tr>
			<tr>
				<th>支払方法</th>
					<th><%= @order.payment_method %></th>
			</tr>
			<tr>
				<th>注文ステータス</th>
					<th><%= form_for @order,url:admin_order_path(@order) do |f| %>
					<%= f.select  :order_status, [["販売中", "販売中"],["売切れ","売切れ"]] %>
					<%= f.submit '更新', class: "btn btn-primary" %>
					</th>
					<% end %>
			</tr>
		</table>
	</div>
	<div class="row">
		<div class="col-xs-7">
		<table class = "table table-hover table-inverse">
			<thead>
				<tr class="active">
					<th>商品名</th>
					<th>単価（税込）</th>
					<th>数量</th>
					<th>小計</th>
					<th>制作ステータス</th>
				</tr>
			</thead>
			<tbody>
				<% @ordered_products.each do |ordered_products| %>
					<tr>
						<td><%= ordered_products.product.product_name %></td>
						<td><%= ordered_products.product_tax %></td>
						<td><%= ordered_products.quantity %></td>
						<td><%= @total %></td>
						<td>
							<%= form_for ordered_products,url:admin_order_path do |f| %>
							<%= f.select  :production_status, [["販売中", "販売中"],["売切れ","売切れ"]] %>
							<%= f.submit '更新', class: "btn btn-primary" %>
							<% end %>
						</td>

					</tr>
				<% end %>
			</tbody>
		</table>
		</div>

		<div class="col-xs-3">
			<table>
			<tr>
				<th>商品合計</th>
					<th><%= @total %></th>
			</tr>
			<tr>
				<th>送料</th>
					<th><%= @order.shipping_cost %></th>
			</tr>
			<tr>
				<th>請求合計金額</th>
					<th><%= @total+@order.shipping_cost %></th>
			</tr>
			</table>
		</div>
	</div>
</div>