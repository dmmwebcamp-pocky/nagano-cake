<div class="container">
	<div class="row">
		<div class="col-xs-offset-2 col-xs-8">
		<h3><span style="background-color:gainsboro">　商品一覧　</h3></span>
		</div>
	</div>

	<div class="row">
		<div class="col-xs-offset-10 col-xs-2">
		<a href="products/new" class="btn-circle-3d">＋</a>
		</div>
	<div class="row">
		<div class="col-xs-offset-1 col-xs-10">
		<table class = "table table-hover table-inverse">
			<thead>
				<tr class="active">
					<th>商品ID</th>
					<th>商品名</th>
					<th>税抜価格</th>
					<th>ジャンル</th>
					<th>ステータス</th>
				</tr>
			</thead>
			<tbody>
				<% @products.each do |product| %>
					<tr>
						<td><%= product.id %></td>
						<td><%= link_to product.product_name, admin_product_path(product) %></td>
						<td><%= product.nontax .to_s(:delimited) %></td>
						<td><%= product.genre.genre_name %></td>
						<td><%= product.sales_status %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
		</div>
		    	<%= paginate @products %>
			</div>
	</div>
</div>

