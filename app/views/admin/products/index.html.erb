<div class="container">
	<div class="row">
		<h3>商品一覧</h3>
	</div>

	<div class="row">
		<table class = "table table-hover table-inverse">
			<thead>
				<tr>
					<th>商品ID</th>
					<th>商品名</th>
					<th>税抜価格</th>
					<th>ジャンル</th>
					<th>ステータス</th>
				</tr>
			</thead>
			<tbody>
				<% @products.each do |product| %>
					<tr>
						<td><%= product.id %></td>
						<td><%= link_to product.product_name, admin_product_path(product) %></td>
						<td><%= product.nontax %></td>
						<td><%= product.genre.genre_name %></td>
						<td><%= product.sales_status %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>

