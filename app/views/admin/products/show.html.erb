<div class="container">
	<div class="row">
        <div class="col-xs-offset-2 col-xs-8">
		  <h3><span>　商品詳細　</h3></span><br><br>
	</div>

	<div class="row">
		<div class="col-xs-4">
    		<p><%= attachment_image_tag @product, :image, format: 'jpeg', fallback: "no_image.jpg", size: "300x300" %></p>
    	</div>

    	<table class="col-xs-8" style="height: 300px; font-size: 18px;">
            <tbody>
                <tr>
    		      <td class="info" style="width: 200px;">商品名</td>
                  <td><%= @product.product_name %></td>
                </tr>
                <tr>
                  <td class="info" style="width: 200px;">商品説明</td>
                  <td><%= @product.explanation %></td>
                </tr>
                <tr>
                  <td class="info" style="width: 200px;">ジャンル</td>
                  <td><%= @product.genre.genre_name %></td>
                </tr>
                <tr>
                  <td class="info" style="width: 200px;">税込価格（税抜価格）</td>
                  <td><%= (@product.nontax*1.1) .ceil(-1).to_s(:delimited) %>（<%= @product.nontax.to_s(:delimited) %>）円</td>
                </tr>
                <tr>
                  <td class="info" style="width: 200px;">販売ステータス</td>
                  <td><%= @product.sales_status %></td>
                </tr>
            </tbody>
    	</table>
    </div>
    <div class="row">
		<div class="col-xs-2 col-xs-offset-10">
			<%= link_to '編集する', edit_admin_product_path(@product), class: "btn btn-primary btn-lg btn-block", style: "color: white;" %>
		</div>
	</div>
</div>


