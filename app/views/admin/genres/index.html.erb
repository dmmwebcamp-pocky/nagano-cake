<div class="container">
	<div class="row">
	<div class="col-xs-offset-1 col-xs-10">
		<h3><span>　ジャンル一覧・追加　</span></h3><br><br>
	</div>
	</div>

	<div class="row">
		<div class="col-xs-5">
			<div class="radio-inline">
				ジャンル<%= form_for @genre,url:admin_genres_path do |f| %>
			</div>
				<%= f.text_field :genre_name %>
				<%= f.radio_button :genre_status, :有効, checked: "checked" %>
				<%= f.label :有効 %>
    			<%= f.radio_button :genre_status, :無効 %>
    			<%= f.label :無効 %>
    			<%= f.submit '追加', class: "btn btn-primary", style: "color: white;"  %>
    	</div>
    			<% end %>
	</div>

	<div class="row">
		<div class="col-xs-5">
		<table class = "table table-hover table-inverse">
			<thead>
				<tr class="active">
					<th>ジャンル</th>
					<th>状態</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<% @genres.each do |genre| %>
					<tr>
						<td><%= genre.genre_name %></td>
						<td><%= genre.genre_status %></td>
						<td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-primary", style: "color: white;" , data: {turbolinks: false} %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
	</div>
