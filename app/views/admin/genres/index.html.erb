<div class="container">
	<div class="row">
		<h2>ジャンル一覧・追加</h2>
	</div>

	<div class="row">
		ジャンル<%= form_for @genre,url:admin_genres_path do |f| %>
			<div class="radio-inline">
				<%= f.text_field :genre_name %>
				<%= f.radio_button :genre_status, :有効, checked: "checked" %>
				<%= f.label :有効 %>
    			<%= f.radio_button :genre_status, :無効 %>
    			<%= f.label :無効 %>
    			<%= f.submit '追加', class: "btn btn-primary btn-lg btn-block" %>
    		</div>
    	<% end %>
	</div>

	<div class="row">
		<table class = "table table-hover table-inverse">
			<thead>
				<tr>
					<th>ジャンル</th>
					<th>状態</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<% @genres.each do |genre| %>
					<tr>
						<td><%= genre.genre_name %></td>
						<td><%= genre.genre_status %></td>
						<td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-primary btn-lg btn-block" %></td>
					</tr>
				<% end %>
			</tbody>
	</div>
</table>