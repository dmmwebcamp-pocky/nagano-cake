<div class="container-fluid">
  <div class="row">
    <div class="col-xs-11 col-xs-offset-1">
	  <h3><%= @customer.first_name %>　<%= @customer.last_name %>さんの会員詳細</h3>
    </div>
  </div>

  <div class="row">
  	<div class="col-xs-11 col-xs-offset-1">
  	　　<ul class="list-inline">
  		　　<li style="width: 120px;">顧客ID</li>
  		　　<li><%= @customer.id %>
  			  <% if @customer.customer_status == 0 %>
  			  <span class="label label-info">有効会員</span>
  			  <% else %>
  			  <span class="label label-info">無効会員</span>
  			   <% end %>
  			</li>
  	　　</ul>
  	　　<ul class="list-inline">
  		　　<li style="width: 120px;">氏名</li>
  		　　<li><%= @customer.first_name %>　<%= @customer.last_name %></li>
  	　　</ul>
  	　　<ul class="list-inline">
  		　　<li style="width: 120px;">フリガナ</li>
  		　　<li><%= @customer.first_name_kana %>　<%= @customer.last_name_kana %></li>
  	　　</ul>
  	　　<ul class="list-inline">
  		　　<li style="width: 120px;">郵便番号</li>
  		　　<li><%= @customer.postal_cade %></li>
  	　　</ul>
  	　　<ul class="list-inline">
  		　　<li style="width: 120px;">住所</li>
  		　　<li><%= @customer.address %></li>
  	　　</ul>
  	　　<ul class="list-inline">
  		　　<li style="width: 120px;">メールアドレス</li>
  		　　<li><%= @customer.email %></li>
  	　　</ul>
  	</div>

  	<div class="row">
  	  <div class="col-xs-11 col-xs-offset-1">

  	  		<div class="btn btn-primary" style="display: inline-block;">編集する</div>
  	  		<div class="btn btn-primary" style="display: inline-block;">注文履歴一覧を見る</div>

  	  </div>
  	</div>
  </div>
</div>