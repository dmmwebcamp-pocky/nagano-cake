<span class="registration">会員の方はこちらからログイン</span>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <table class="login_menu">
          <tr>
            <td><%= f.label :メールアドレス %></td>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email", :size=>"50" %></td>
          </tr>
          <tr>
            <td><%= f.label :パスワード %></td>
            <td><%= f.password_field :password, autocomplete: "current-password", :size=>"50" %></td>
          </tr>
          <tr>
            <td></td>
            <td align="right"><u><%= link_to "=>パスワードを忘れた方はこちら", new_password_path(resource_name) %></u></td>
          </tr>
      </table>

  <div class="actions">
    <%= f.submit "ログイン", class: "btn btn-primary " %>
  </div>
<% end %>

<span class="registration">登録がお済みでない方</span>

<div class="login">
<u><%= link_to "こちら", new_registration_path(resource_name) %></u>から新規登録を行ってください。
</div>
