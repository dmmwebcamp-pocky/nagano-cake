<dev class="container">
  <span class="headline-logo">会員の方はこちらからログイン</span>

      <table class="login-menu">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <% if @customer.errors.any? %>
        <div class = "alert alert-warning">
          <ul>
              <% @customer.errors.full_messages.each do |message| %>
                < li><%= message %></li>
              <% end %>
          </ul>
      </div>
      <% end %>
          <tr>
            <td width=20%><%= f.label :メールアドレス %></td>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email", :size=>"50" %></td>
          </tr>
          <tr>
            <td><%= f.label :パスワード %></td>
            <td><%= f.password_field :password, autocomplete: "current-password", :size=>"50" %></td>
          </tr>
          <tr>
            <td></td>
            <td><u><%= link_to "=>パスワードを忘れた方はこちら", new_password_path(resource_name), class: "forget" %></u></td>
          </tr>
          <tr>
            <td></td>
            <td><%= f.submit "ログイン", class: "btn btn-primary" %></td>
          </tr>
      </table>
  <% end %>

  <span class="headline-logo">登録がお済みでない方</span>
  <p class="login-here"><u><%= link_to "こちら", new_registration_path(resource_name) %></u>から新規登録を行ってください。</p>

</div>