
  <span class="registration">新規会員登録</span>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
      <table class="registration_form">
          <tr>
            <td><%= f.label :名前 %></td>
            <td><%= f.label :（姓） %></td>
            <td><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %></td>
            <td></td>
            <td><%= f.label :（名） %></td>
            <td><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %></td>
          </tr>
          <tr>
            <td><%= f.label :フリガナ %></td>
            <td><%= f.label :（セイ） %></td>
            <td><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %></td>
            <td></td>
            <td><%= f.label :（メイ） %></td>
            <td><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %></td>
          </tr>
           <tr>
            <td><%= f.label :メールアドレス %></td>
            <td></td>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          </tr>
           <tr>
            <td><%= f.label :郵便番号（ハイフンなし） %></td>
            <td></td>
            <td><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %></td>
          </tr>
           <tr>
            <td><%= f.label :住所 %></td>
            <td></td>
            <td colspan="5" class="address"><%= f.text_field :address, autofocus: true, autocomplete: "address", :size=>"60" %></td>
          </tr>
           <tr>
            <td><%= f.label :電話番号（ハイフンなし） %></td>
            <td></td>
            <td><%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %></td>
          </tr>
           <tr>
            <td><%= f.label :パスワード（６文字以上） %></td>
            <td></td>
            <td><%= f.password_field :password, autocomplete: "new-password" %></td>
          </tr>
          <tr>
            <td><%= f.label :パスワード（確認用） %></td>
            <td></td>
            <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
          </tr>
      </table>

    <div class="actions">
      <%= f.submit "新規登録", class: "btn btn-success " %>
    </div>
  <% end %>

<span class="registration">既に登録済みの方</span>

<div class="login">
<%= render "customers/shared/links" %>
</div>

