	<div class="col-xs-9">
		<div class="#">
			<h2>商品一覧</h2>
            <div class="main-box clearfix">
                <%# 実装用 %>
                <% @products.each do |product| %> 
                    <div class="product-box">
                        <%= attachment_image_tag(product, :image, :fill,210, 140, fallback: "no-image-mini.jpg") %> 
                        <p><%= link_to product.product_name, customers_product_path(product.id) %></p> 
                        <p>￥<%= product.nontax * 1.1 %></p> 
                    </div>
                <% end %> 
            </div>
		</div>
        <div class="pagination">
		    <%= paginate @products %>
        </div>
	</div>
