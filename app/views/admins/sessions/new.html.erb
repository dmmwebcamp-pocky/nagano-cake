<div class="container">
  <div class="row">
    <div class="col-md-offset-3 col-md-5">
      <div class="form-header">
        <h3>管理者ログイン</h3>
      </div>
    </div>
    <div class="col-md-4 col-md-offset-4">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field row">
        <%= f.label :メールアドレス, class: "email_field col-md-4 float-right" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "email_field col-md-8" %>
      </div>

      <div class="field row">
        <%= f.label :　　パスワード, class: "password_field col-md-4 float-right" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "password_field col-md-8" %>
      </div>
