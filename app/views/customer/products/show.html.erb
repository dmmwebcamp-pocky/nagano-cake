<%# 商品の詳細ページ（会員側） %>
<div class="row">
	<div class="col-xs-3">
    <%= render 'layouts/searchform', genres: @genres %>
	</div>

	<div class="col-xs-4">
		<div class="product-box-left">
            <%= attachment_image_tag(@product, :image, fallback: "no_image.jpg", size: "450x400") %>
		</div>
	</div>
    <div class="col-xs-5">
        <div class="product-box-right">
            <h2><%= @product.product_name %></h2>
            <div class="product-introduction">
                <%= @product.explanation %>
            </div>
            <br>
            <p><span class=product-price><%= @product.nontax %></span>（税込）</p>
            <br>
            <%# 商品の数量選択プルダウン %>
            <%= form_for @quantity,url:customer_cart_items_path do |f| %>
                <%= f.hidden_field :product_id, :value => @product.id %>
                <%= f.select :quantity, [["1",1], ["2",2]], include_blank: "個数選択" %>
                <%= f.submit 'カートに入れる'%>
            <% end %>
        </div>
    </div>
</div>