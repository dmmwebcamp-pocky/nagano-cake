<div class="ppp"></div>
<div class="row">
    <div class="col-xs-offset-1 col-xs-8">
        <h4 class="shipping-headline"><span class="shipping-head">配送先登録 / 一覧</span></h4><br>
        <%= form_for @shipping,url: customer_shipping_path do |f| %>
            <table class="#">
                    <tr>
                        <td><%= f.label :郵便番号（ハイフンなし） %></td>
                        <td><%= f.text_field :postal_code, :size=>"25" %></td>
                        <td></td>
                    </tr>
                    <tr>
                        <td><%= f.label :住所 %></td>
                        <td><%= f.text_field :address, :size=>"70" %></td>
                        <td></td>
                    </tr>
                    <tr>
                        <td><%= f.label :宛名 %></td>
                        <td><%= f.text_field :name, :size=>"25" %></td>
                        <td><%= f.submit "　編集する　", class: "btn btn-success " %></td>
                    </tr>
            </table>
        <% end %>
    </div>
    <div class="col-xs-2"></div>
</div>