<div class="mypage-wrapper">

	<div class="mypage-logo">
		<span>マイページ</span>
	</div>

<div class="row">
	<div class="info-menu">
		<span class="info-logo">登録情報</span>
		<%= link_to '編集する',edit_customer_customers_path, class: "btn btn-primary" %>
		<%=link_to "パスワードを変更する", edit_customer_registration_path, class: "btn btn-primary" %>
	</div>
</div>

<div class="row">
	<table class="info-table col-md-6">
		<tbody>
			<tr>
				<td class="left">氏名</td>
				<td><%= @customer.first_name %><%= " " %><%= @customer.last_name %></td>
			</tr>
			<tr>
				<td class="left">カナ</td>
				<td><%= @customer.first_name_kana %><%= " " %><%= @customer.last_name_kana %></td>
			</tr>
			<tr>
				<td class="left">郵便番号</td>
				<td><%= @customer.postal_code %></td>
			</tr>
			<tr>
				<td class="left">住所</td>
				<td><%= @customer.address %></td>
			</tr>
			<tr>
				<td class="left">電話番号</td>
				<td><%= @customer.phone_number %></td>
			</tr>
			<tr>
				<td class="left">メールアドレス</td>
				<td><%= @customer.email %></td>
			</tr>
		</tbody>
	</table>
</div>

<div class="row">
	<table class="my-orders">
		<tbody>
			<tr>
				<td>配送先</td>
				<td><%= link_to '一覧を見る',customer_shippings_path, class: "btn btn-primary" %></td>
			</tr>
			<tr>
				<td>注文履歴</td>
				<td><%= link_to '一覧を見る',root_path, class: "btn btn-primary" %></td>
			</tr>
		</tbody>
	</table>
</div>
</div>