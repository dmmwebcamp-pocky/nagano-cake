<div class="order-wapper">
    <%= form_with url: customer_orders_path do |f| %> 
        <span class="headline">注文情報入力</span>
        <%# 支払い方法box %>
        <div class="cache-method">
            <span class="headline-cache">支払方法</span>
            <div class="#">
                <%= f.radio_button :payment_method, 0 %>
                <%= f.label :クレジット %><br>
                <%= f.radio_button :payment_method, 1 %>
                <%= f.label :銀行振込 %>
            </div>
        </div><br>
        <%# お届け先box %>
        <div class="address-method">
            <span class="headline-address">お届け先</span>
            <div class="#">
                <%# ご自身の住所 %>
                <%= f.radio_button :trigger, 'A' %>
                <%= f.label :ご自身の住所 %><br>
                <%= @customer.postal_code %>
                <%= @customer.address %>
                <%= (@customer.first_name) + (@customer.last_name) %><br>

                <%# 登録済の住所 %>
                <%= f.radio_button :trigger, 'B' %>
                <%= f.label :登録済住所から選択 %><br> 
                <%= f.collection_select :address_id, Shipping.where(customer_id: 2), :id, :full_order_address, include_blank: "選択して下さい" %><br>

                <%# 新規登録住所 %>
                <%= f.radio_button :trigger, 'C' %>
                <%= f.label :新しいお届け先 %>
                <table class="new-address">
                    <tr>
                        <td><%= f.label :郵便番号（ハイフンなし） %></td>
                        <td><%= f.text_field :ordered_postal_code, autofocus: true %></td>
                    </tr>
                    <tr>
                        <td><%= f.label :住所 %></td>
                        <td><%= f.text_field :ordered_address, autofocus: true %></td>
                    </tr>
                    <tr>
                        <td><%= f.label :宛名 %></td>
                        <td><%= f.text_field :address_name, autofocus: true %></td>
                    </tr>
                </table>
            </div>
        </div>
        <%= f.submit "確認画面へ進む", class: "btn btn-success" %>
    <% end %>
</div>