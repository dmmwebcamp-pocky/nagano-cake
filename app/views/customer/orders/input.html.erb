<div class="order-wapper">
    <%= form_for @order, url: customer_orders_path do |f| %> 
        <span class="headline">注文情報入力</span>
        <%# 支払い方法box %>
        <div class="cache-method">
            <span class="headline-cache">支払方法</span>
            <div class="#">
                <%= f.radio_button :payment_method, 0 %>
                <%= f.label :クレジット %><br>
                <%= f.radio_button :payment_method, 1 %>
                <%= f.label :銀行振込 %>
            </div>
        </div><br>

        <%# お届け先box %>
        <div class="address-method">
            <span class="headline-address">お届け先</span>
            <div class="#">
                <%= f.radio_button :ordered_address, 0 %>
                <%= f.label :ご自身の住所 %><br>
                <p>祐天寺だけど中目黒ってことにしといて</p>

                <%= f.radio_button :ordered_address, 1 %>
                <%= f.label :登録済住所から選択 %><br>
                <%= f.select :ordered_address, [["中目黒","中目黒"],["祐天寺","祐天寺"],["東京ドーム","東京ドーム"],["岐阜","岐阜"]] %><br>
                <%# <%= f.collection_select :保存先のカラム名, テーブル（モデル）名.all, :実際にDBに保存させるカラム名, :選択肢に用いるカラム名, include_blank: "選択して下さい" %>

                <%= f.radio_button :ordered_address, 2 %>
                <%= f.label :新しいお届け先 %>
                <table class="new-address">
                    <tr>
                        <td><%= f.label :郵便番号（ハイフンなし） %></td>
                        <td><%= f.text_field :ordered_postal_code, autofocus: true %></td>
                    </tr>
                    <tr>
                        <td><%= f.label :住所 %></td>
                        <td><%= f.text_field :ordered_address, autofocus: true %></td>
                    </tr>
                    <tr>
                        <td><%= f.label :宛名 %></td>
                        <td><%= f.text_field :adress_name, autofocus: true %></td>
                    </tr>
                </table>
            </div>
        </div>
        <%= f.submit "確認画面へ進む", class: "btn btn-success" %>
    <% end %>
</div>