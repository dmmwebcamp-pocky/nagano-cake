<h3 class="headline-a">注文履歴一覧</h3>
<div class="row">
    <div class="col-xs-offset-1 col-xs-10">
        <table class="table table-line">
            <thead>
                <tr>
                    <th class="active">注文日</th>
                    <th class="active">配送先</th>
                    <th class="active">注文商品</th>
                    <th class="active">支払金額</th>
                    <th class="active">ステータス</th>
                    <th class="active">注文詳細</th>
                </tr>
            </thead>

            <tbody>
                <% @order.each do |order| %>
                    <tr>
                        <td class="vertical-align"><%= order.created_at.strftime('%Y/%m/%d') %></td>
                        <td class="vertical-align"><%= order.ordered_postal_code %><br>
                            <%= order.ordered_address %><br>
                            <%= order.address_name %></td>
                        <td class="vertical-align"><% order.ordered_products.each do |ordered_product| %>
                          <%= ordered_product.product.product_name %><br>
                        <% end %></td>
                        <td class="vertical-align"><%= (order.total_price + order.shipping_cost).round.to_s(:delimited) %>円</td>
                        <td class="vertical-align"><%= order.order_status %></td>
                        <td class="table-align tate-tate vertical-align"><%= link_to " 表示する ", customer_order_path(order.id), class: "btn btn-primary btn-sm", style: "color: white;" %></td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>