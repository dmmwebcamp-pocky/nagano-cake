<h3>注文履歴一覧</h3>
<table class="ordered-box">
    <thead>
        <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
        </tr>
    </thead>

    <tbody>
        <% @order.each do |order| %>
            <tr>
                <td><%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %></td>
                <td>full_address</td>
                <%# <td><%= order.product_name %></td> %>
                <%# <td><%= order.quantity %></td> %>
                <td><%= tanka * cart.quantity %></td>
                <td>表示する</td>
            </tr>
        <% end %>
    </tbody>
</table>