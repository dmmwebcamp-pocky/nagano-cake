<h3>注文履歴一覧</h3>
<table class="ordered-box">
    <thead>
        <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
        </tr>
    </thead>

    <tbody>
        <% @subtotal = 0 %>
        <% @order.each do |order| %>
            <tr>
                <td><%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %></td>
                <td><%= order.address_name %></td>
                <td><%= order.ordered_product.product_name %></td>
                <td><%= (order.product.nontax * 1.1) * cart.quantity %></td>
                <td><%= order.order_status %></td>
                <td><%= link_to "　表示する　", customer_order_path(order.id) %></td>
            </tr>
        <% end %>
    </tbody>
</table>